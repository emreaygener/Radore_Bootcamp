@model IEnumerable<Radore_Mvc.Models.Kitap>

@{
    ViewData["Title"] = "Index";
}

<h1>Kitap Listesi</h1>

<p>
    <a asp-action="KitapOlustur">Yeni Kitap Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitapAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SayfaSayisi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SayfaSayisi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Detay", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Sil", "DeleteView", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
